<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th>Colour</th>
      <th>Photo file name</th>
      <th>Photo content type</th>
      <th>Photo file size</th>
      <th>Photo updated at</th>
      <th>Price</th>
      <th>Active</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.created_at %></td>
        <td><%= product.updated_at %></td>
        <td><%= product.colour %></td>
        <td><%= product.photo_file_name %></td>
        <td><%= product.photo_content_type %></td>
        <td><%= product.photo_file_size %></td>
        <td><%= product.photo_updated_at %></td>
        <td><%= product.price %></td>
        <td><%= product.active %></td>
        <td><%= product.size %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

